          LIST     P=16F84A
          ORG      00
          
          ;CONFIGURACION DE PUERTOS 
          BSF      03h,5
          BSF      85h,2
          CLRF     86h
          BCF      03h,5
          
          ;PROGRAMA PRINCIPAL
          CLRF     05h
          CLRF     06h
          
UNO       BTFSS    05h,0
          GOTO     UNO
          CERO
          CLRF     06h
          MOVLW    01h
          MOVWF    06h
          MOVLW    .15
          CALL     DELAY ;ENCIENDE VERDE 
          
          CLRF     06h
          MOVLW    .3
          CALL     DELAY ;APAGA VERDE
          
          
          BSF      06h,0
          MOVLW    .3
          CALL     DELAY ;ENCIENDE VERDE 

          CLRF     06h
          MOVLW    .3
          CALL     DELAY ;APAGA VERDE
         
          BSF      06h,0
          MOVLW    .3
          CALL     DELAY ;ENCINDE VERDE
 
          BCF      06h,0
          MOVLW    .3
          CALL     DELAY ;APAGA VERDE

          BSF      06h,1 
          MOVLW    .10
          CALL     DELAY ;ENCIENDE AMARILLO
 
          CLRF     06h   ;APAGA AMARILLO
       
          BSF      06h,2
          MOVLW    .15
          CALL     DELAY ;ENCINDE ROJO

          CLRF     06h
          GOTO     CERO ;APAGA ROJO Y REGRESA A VERDE

          ;SUBRUTINA DE RETARDO 
          DELAY      
          MOVWF      0Ch
UNO1      MOVLW      0FFh
          MOVWF      0Dh
DOS1      MOVLW      0FFh
          MOVWF      0Eh
TRES1     DECFSZ     0Eh,1
          GOTO       TRES1
          DECFSZ     0Dh,1
          GOTO       DOS1
          DECFSZ     0Ch
          GOTO       UNO1
          RETURN 
          END 
                    

          
          
          
           
        
